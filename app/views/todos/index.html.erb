<h1>Have something to do?</h1>
<br>
<hr>
  <div class="col-md-4">
    <h3>Add a new todo:</h3>
    <div class="form-group col-md-10">
      <%= form_with scope: :todo, url: todos_path do |f| %>

        <div class= "form-group">
          <%= f.label :title, "Title" %>
          <%= f.text_field :title, class: "form-control", placeholder: "ex. Take out garbage." %>
        </div>
        <div class= "form-group">
          <%= f.label :date, "Date" %>
          <%= f.text_field :date, class: "form-control", placeholder: "ex. 2018-01-01" %>
        </div>
        <div class= "form-group">
          <%= f.label :description, "Detail" %>
          <%= f.text_area :description, class: "form-control"%>
        </div>
          <%= f.submit "Create", class: "btn btn-success btn-sm" %>
          
     <% end %>
       
    </div>

  </div>

  <div class="col-md-8">
    <h3>Here's your todo list</h3><br>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: name %>
    <% end %><br>
    <table class="table table-hover">
      <% @todos.each do |todo| %>
        <tr>
          <td><b><%= todo.title %></b></td>
          <td>
            <small>
              
              <%=link_to 'Edit', edit_todo_path(todo) %>
              <%= link_to 'Delete', todo_path(todo), method: :delete, data:{confirm: "Are you sure you want to delete this event?"} %>
                
            </small> 
          </td>
          <td><%= todo.date %></td>
          <td><i><%= todo.description %></i></td>
        </tr>

      <% end %>   
    </table>
    
  </div>