<div class="col-md-6">
  <h3>Edit a new todo:</h3>
<br>
  <div class="form container col-md-8 col-md-offset-2">
    <%= form_for @todo do |f| %>

      <div class= "form-group">
        <%= f.label :title, "Title" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class= "form-group">
        <%= f.label :date, "Date" %>
        <%= f.text_field :date, class: "form-control" %>
      </div>
      <div class= "form-group">
        <%= f.label :description, "Detail" %>
        <%= f.text_area :description, class: "form-control"%>
      </div>
        <%= f.submit "Update", class: "btn btn-danger btn-sm" %>
      
     <% end %>
     <br>
     <%= link_to "Back to Index", todos_path %>
  </div>
</div>